@model Card
@{
    ViewData["Title"] = "Delete Movie";
}


<h2 class="text-white">Confirm Deletion</h2>
<h3 class="text-white">@Model.CardName</h3>

<form asp-action="DeleteCard" method="post">
    <input type="hidden" asp-for="CardId" />

    <button type="submit" class="btn btn-primary">Delete</button>
    <a asp-controller="Card" asp-action="CardList" class="btn btn-primary">Cancel</a>
</form>
